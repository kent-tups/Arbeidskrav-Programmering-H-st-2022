    <script>
      //document.getElementById("demo").innerHTML = Math.floor(Math.random() * 3+1);

      var monster = document.getElementById("monster-div2");
      var xd = document.getElementById("123");

      monsterLivesContainer = 0;

      var monsterLives = 40;

      function myMonsters() {
        let text = "";
        for (let i = 0; i < Math.floor(Math.random() * 3 + 1); i++) {
          text += "<img src='images/cute-mummy.png' >" + i;
          document.getElementById("monster-div2").innerHTML = text;
          monsterLivesContainer += monsterLives;
        }
      }
      function kill() {
        monsterLivesContainer -= 10;
        console.log(monsterLivesContainer);
      }
      myMonsters();

      monster.onlick = kill;

      console.log(monsterLivesContainer);
    </script>
